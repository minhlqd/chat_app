<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chat_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/chat"
        android:label="@string/app_name"
        android:roundIcon="@drawable/chat"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatApp">
        <activity android:name=".ui.EditProfileActivity" />
        <activity android:name=".ui.InfoActivity" />
        <activity
            android:name=".ui.ResetPasswordActivity"
            android:parentActivityName=".ui.LoginActivity" />
        <activity android:name=".ui.ProfileActivity" />
        <activity android:name=".ui.MessageActivity" />
        <activity
            android:name=".ui.LoginActivity"
            android:parentActivityName=".ui.StartActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity
            android:name=".ui.RegisterActivity"
            android:parentActivityName=".ui.StartActivity" />
        <activity android:name=".ui.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>